extends pug/template
block title
    title ESMS - Page Dai Ly
block content
    include pug/layout/daily-banner
    include pug/layout/daily-profit
    include pug/layout/daily-agency
    include pug/layout/daily-cooperate
    include pug/layout/daily-registering
block append scripts
    script(type="text/javascript").
        $(document).ready(function () {
            $('#myCarousel').carousel({
                interval: 10000
            });

            $('.carousel .carousel-item').each(function () {
                var next = $(this).next();
                if (!next.length) {
                    next = $(this).siblings(':first');
                }
                next.children(':first-child').clone().appendTo($(this));

                if (next.next().length > 0) {
                    next.next().children(':first-child').clone().appendTo($(this));
                }
                else {
                    $(this).siblings(':first').children(':first-child').clone().appendTo($(this));
                }
            });
        });


