                    td.qty: input(type="text" value="1")
                    td $45.00
                    td.red $45.00
            .clearfix
                .left-column
                    input#coupon-code(type="text" value="Coupon Code:")
                    a.apply Apply
                .right-column
                    p Sub Total: $0.00
                    p Vat 17%: $0.00
                    p.total Total: $0.00
                    p
                        a.checkout Checkout
                        a.update Update
                    p: a(href="#") Continue Shopping &rarr;

