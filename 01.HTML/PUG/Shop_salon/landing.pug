                            li(data-target="#carousel-third" data-slide-to="1")
                        .carousel-inner(role="listbox")
                            .item.active
                                img(src="images/salon3-1.png")
                                .carousel-caption
                                    h1: a(href="#") Posh Nails
                                    p NC, Charlotte
                                    p 28277
                            .item
                                img(src="images/salon3-1.png")
