section#contact.parallax-section
    .container
        .row
            //Section title
            .col-md-offset-2.col-md-8.col-sm-offset-2.col-sm-8
                .section-title
                    h5.wow.bounceIn PLAN YOUR TRIP
                    h1.heading CONTACT US
                    hr
                    p Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla. Excepteu sunt in culpa qui officia deserunt mollit.
            //Contact form section
            .col-md-offset-1.col-md-10.col-sm-12
                form.wow.fadeInUp(action="#" method="post" data-wow-delay="0.6")
                    .col-md-4.col-sm-6
                        input.form-control(type="text" placeholder="Name" name="name")
                    .col-md-4.col-sm-6
                        input.form-control(type="email" placeholder="Email" name="email")
                    .col-md-4.col-sm-12
                        input.form-control(type="text" placeholder="Subject" name="subject")
                    .col-md-12.col-sm-12
                        textarea.form-control(placeholder="Message" rows="7" name="message")
                    .col-md-offset-2.col-md-8.col-sm-offset-2.col-sm-8
                        input.form-control(type="submit" value="SHOOT MESSAGE")
            //Contact detail section
            .contact-detail.col-md-12.col-sm-12
                .col-md-6.col-sm-6
                    h3: i.icon-envelope.medium-icon.wow.bounceIn(data-wow-delay="0.6s") EMAIL
                    p hello@company.com
                .col-md-6.col-sm-6
                    h3: i.icon-phone.medium-icon.wow.bounceIn(data-wow-delay="0.6s") PHONES
                    p 010-010-0110 | 090-090-0990